extends layout

block content
  div.my-3 #{baby.babyName}のオムツ替え記録を追加
  form(action=`/babies/${baby.babyId}/dipers/new`, method="post").my-3
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      div ◆オムツ替え時間
      input(type="date" name="date" style="width: 18rem;")#date.form-control
      input(type="time" name="time" style="width: 18rem;")#time.form-control
    div.form-group
      div ◆オムツ替え理由
      div.radio
        label(for="pee") おしっこ
        input#peepooType1(type="radio" name="peepooType" value="0" checked=true)
      div.radio
        label(for="poo") うんち
        input#peepooType2(type="radio" name="peepooType" value="1" checked=false)
      div.radio
        label(for="peepoo") 両方
        input#peepooType3(type="radio" name="peepooType" value="2" checked=false)
    div.form-group
        label(for="interval1") ◆メモ
        textarea(name="memo", cols="15", rows="5" style="width: 18rem;")#interval.form-control
    button(type="submit" ).btn.btn-info 追加
