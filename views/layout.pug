doctype html
html
  head
    title AkaReco（赤ちゃんレコード）
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
          crossorigin="anonymous")
  body
    div.pos-f-t
      nav.navbar.navbar-dark.bg-dark
        button(type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation").navbar-toggler
          span.navbar-toggler-icon
      div#navbarToggleExternalContent.collapse
        div.bg-dark.p-4
          ul.navbar-nav
            if user
              li.nav-item
                a(href="/logout").nav-link ログアウト
            else
              li.nav-item
                a(href="/login").nav-link ログイン
            li.nav-item
              a(href="/").nav-link トップページ
            if babies
              each baby in babies
                li.nav-item
                  a(href=`/babies/${baby.babyId}`).nav-link #{baby.babyName}の記録
            else if baby
                li.nav-item
                  a(href=`/babies/${baby.babyId}`).nav-link #{baby.babyName}の記録



    div.container
      block content
    script(src="/javascripts/bundle.js")
